rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // KYC documents - user access limited
    match /kyc/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin();
      allow delete: if isAdmin();
    }

    // Venue images
    match /venue_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() || isVenueManager();
    }

    // Event images
    match /event_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() || isVenueManager();
    }

    function isAdmin() {
      return request.auth != null &&
             request.auth.token.admin == true;
    }

    function isVenueManager() {
      return request.auth != null &&
             request.auth.token.venueManager == true;
    }
  }
}
